<h1>People#index</h1>
<p><%= @msg %></p>
<table>
<tr>
  <th>Id</th><th>name</th><th>age</th><th>mail</th><th colspan="2"></th>
</tr>
<% @data.each do |obj| %>
 <tr>
 <td><%= obj.id %></td>
 <td><a href="/people/<%= obj.id %>"><%= obj.name %></td>
 <td><%= obj.age %></td>
 <td><%= obj.mail %></td>
 <td><a href="/people/edit/<%= obj.id %>">Edit</a></td>
 <td><a href="javascript:delData(<%= obj.id %>);">Delete</a></td>
 </tr>
 <% end %>
 </table>
 <p><a href="/people/add">新規作成ページ</a></p>
 <p><a href="/people/find">検索</a></p>
  <script>
    function delData(num) {
      if (confirm('このデータを削除しますか？')) {
        document.location = "people/delete/" + num;
      }
      return false;
    }
  </script>
